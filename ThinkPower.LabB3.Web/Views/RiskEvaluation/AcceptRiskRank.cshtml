@{
    ViewBag.Title = "AcceptRiskRank";
}
<div class="container">
    @using (Html.BeginForm("", "", FormMethod.Post, htmlAttributes: new { @class = "", id = "" }))
    {
    <div>
        <h2 class="text-center">投資風險承受度評估表(僅供參考)</h2>
    </div>
    <div id="risk-table">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>

                    </th>
                    <th>
                        <span class="h2">□</span><span>11分以下</span>
                    </th>
                    <th>
                        <span class="h2">□</span><span>12~14分以下</span>
                    </th>
                    <th>
                        <span class="h2">□</span><span>15分(含)以上</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        投資屬性
                    </td>
                    <td>
                        低(保守)
                    </td>
                    <td>
                        中(穩健)
                    </td>
                    <td>
                        高(成長)
                    </td>
                </tr>
                <tr>
                    <td>
                        可選擇投資標的風險收益等級
                    </td>
                    <td>
                        RR1、RR2
                    </td>
                    <td>
                        RR1、RR2、RR3
                    </td>
                    <td>
                        RR1、RR2、RR3、RR4、RR5
                    </td>
                </tr>
                <tr>
                    <td colspan="4">
